programa
{
	
	funcao inicio()
	{
		escreva("Por favor, digite o numero que deseja conferir:  ")
		inteiro numero //Aqui é declarada uma variavel do tipo inteiro que armazenará o numero a ser digitado
		
		leia(numero) //função que solicita a inclusão do numero pelo0 usuario
		
		se(numero % 2 == 0) 
			escreva("\nO Numero ") escreva(numero) escreva(" é par\n") //nesta seção a função "se" é obtido o resto da divisão por 2 do numero para saber se eleretorna o valor zero, para  ser um numero par
		senao
			escreva("\nO Numero ") escreva(numero) escreva(" é impar\n")//caso não retorne zero, o valor digitado é ímpar
				
	}
}
